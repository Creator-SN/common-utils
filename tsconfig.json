{
    "include": [
        // 通过终端的task，会自动监视ts代码变化输出结果到dist中
        "src/**/*.ts"
    ], // 要打包的文件
    "exclude": [
        // 排除那些文件不打包
        "node_modules",
        "*.test.ts"
    ],
    "compilerOptions": {
        "lib": ["ES2015", "DOM"],
        "declaration": true, // 包含声明文件
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "strict": true,
        "outDir": "./lib/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node"
    }
}
